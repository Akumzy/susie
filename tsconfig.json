    "target": "ESNEXT",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": false,
    "resolveJsonModule": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": false,
    "sourceMap": false,
    "declaration": false,
    "outDir": "dist"
  },
  "include": ["src/**/*", "dist/index.d.ts"]
}
